<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav>
      <ul class="nav navbar-nav navbar-left">
        <li><%= link_to "RyokouGram", root_url %></li>
      </ul>
      <ul class="nav navbar-nav navbar-center">
       <div class="row search-component">
      <div class="search-bar">
        <%= form_tag searches_path, method: :get do %>
          <%= text_field_tag :search, params[:search], autocorrect: false,
            class: "typeahead_input",
            placeholder: "Places or Username or Tags", spellcheck: false %>
       
      </div>
          <%= submit_tag "Search", class: "search-btn"%>
        <% end %>


      </div>
      </ul>
      <% if user_signed_in? %>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to 'All places', places_path %></li>
        <li class="dropdown pull-right">
          <a href="#" data-toggle="dropdown" class="dropdown-toggle">
          <div class="row">
            <div class="col-lg-4">
              <div class="avt-navbar">
                <%= image_tag current_user.avatar.url if current_user.avatar %>
              </div>
            </div>
            <div class="col-lg-8">
              <%= current_user.name %><b class="caret"></b>
            </div>

          </div>
          </a>
          <ul class="dropdown-menu">
            <li><%= link_to 'Profile', current_user %></li>
            <li><%= link_to 'Edit account', edit_user_registration_path %></li>

            <li class="divider"></li>
            <li><%= link_to 'Sign out', destroy_user_session_path, :method=>'delete' %></li>
          </ul>
        </li>
      </ul>
      <% else %>
      <ul class="nav navbar-nav navbar-right">
         <li> <%= link_to 'Sign in', new_user_session_path  %> </li>
         <!--<li> <%= link_to 'Sign up', new_user_registration_path %> </li>-->
      </ul>
      <% end %>

    </nav>
  </div>
</header>

