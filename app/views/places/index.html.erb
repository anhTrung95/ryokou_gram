<h1>All places</h1>

<% if current_user.admin %>
  <%= link_to "Add place", new_place_path %>
<% end %>

<%= will_paginate %>

<ul class="places">
  <% @places.each do |place| %>
    <li>
      <%= link_to place.name, place %>
      <% if current_user.admin %>
       | <%= link_to "delete", place, method: :delete,
                                  data: { confirm: "You sure?" } %>
      <% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>
